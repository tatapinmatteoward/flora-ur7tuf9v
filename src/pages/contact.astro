---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us";
const pageDescription = "Reach out to FloraFusion for blooming innovations in floral design. Connect with our passionate team to elevate your floristry business today.";
const contactInfo = [
  {
    icon: "envelope",
    title: "Email",
    value: "hello@florafusion.com",
    description: "Drop us a line for quick queries or partnership ideas."
  },
  {
    icon: "phone-alt",
    title: "Phone",
    value: "(555) BLOOM-99",
    description: "Call us during business hours (Mon-Fri, 9 AM - 5 PM EST) for personalized advice."
  },
  {
    icon: "map-marker-alt",
    title: "Address",
    value: "123 Petal Plaza, Floral City, FC 12345",
    description: "Swing by our studio for a hands-on demo!"
  }
];

const testimonials = [
  {
    quote: "Every great bouquet starts with a great conversation.",
    author: "FloraFusion Team"
  },
  {
    quote: "Innovative tools that make our floral designs bloom beyond expectations.",
    author: "Sarah M., Owner of Bloom Boutique"
  },
  {
    quote: "The team at FloraFusion transformed our floristry business with their inspiring solutions.",
    author: "Michael T., Florist & Designer"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-[#ff6b35]/10 to-[#1e90ff]/10 z-0"></div>
    <div class="absolute top-0 left-0 w-full h-full z-0">
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-[#ff6b35]/20 blur-xl"></div>
      <div class="absolute bottom-20 right-20 w-48 h-48 rounded-full bg-[#1e90ff]/20 blur-xl"></div>
      <div class="absolute top-1/3 right-1/4 w-24 h-24 rounded-full bg-[#ff6b35]/30 blur-xl"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-[#ff6b35] to-[#1e90ff]">
          Contact Us
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-2xl mx-auto">
          Reach out to FloraFusion for blooming innovations in floral design. Connect with our passionate team to elevate your floristry business today.
        </p>
        
        <div class="mt-12 p-1 bg-gradient-to-r from-[#ff6b35] to-[#1e90ff] rounded-full inline-block">
          <div class="bg-white rounded-full px-8 py-4">
            <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-[#ff6b35] to-[#1e90ff]">
              Let's Bloom Together!
            </h2>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-16 bg-gradient-to-b from-white to-[#f0f9ff]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Get in Touch</h2>
        <div class="w-24 h-1 bg-[#ff6b35] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {contactInfo.map((info, index) => (
          <div 
            key={index} 
            class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100 transform transition-all duration-300 hover:scale-105 hover:shadow-xl"
          >
            <div class="w-16 h-16 rounded-full bg-[#ff6b35]/10 flex items-center justify-center mb-6">
              <i class={`fas fa-${info.icon} text-2xl text-[#ff6b35]`}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">{info.title}</h3>
            <p class="text-lg font-semibold text-[#1e90ff] mb-3">{info.value}</p>
            <p class="text-gray-600">{info.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl overflow-hidden">
        <div class="md:flex">
          <div class="md:w-1/2 bg-gradient-to-br from-[#ff6b35] to-[#1e90ff] p-10 text-white">
            <h2 class="text-3xl font-bold mb-6">Send us a Message</h2>
            <p class="mb-8 text-lg">Fill out the form and we'll respond within 24 hours.</p>
            
            <div class="space-y-4">
              <div class="flex items-start">
                <i class="fas fa-check-circle mt-1 mr-3 text-green-300"></i>
                <span>Personalized support for your floristry needs</span>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle mt-1 mr-3 text-green-300"></i>
                <span>Innovative solutions for modern florists</span>
              </div>
              <div class="flex items-start">
                <i class="fas fa-check-circle mt-1 mr-3 text-green-300"></i>
                <span>Collaboration opportunities welcome</span>
              </div>
            </div>
            
            <div class="mt-10 pt-8 border-t border-white/30">
              <p class="italic">"Every great bouquet starts with a great conversation." â€“ FloraFusion Team</p>
            </div>
          </div>
          
          <div class="md:w-1/2 p-10">
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-gray-700 font-medium mb-2">Full Name</label>
                <input 
                  type="text" 
                  id="name" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6b35] focus:border-transparent"
                  placeholder="Your name"
                />
              </div>
              
              <div>
                <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6b35] focus:border-transparent"
                  placeholder="your.email@example.com"
                />
              </div>
              
              <div>
                <label for="message" class="block text-gray-700 font-medium mb-2">Your Message</label>
                <textarea 
                  id="message" 
                  rows="4" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#ff6b35] focus:border-transparent"
                  placeholder="Tell us about your floristry journey..."
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-[#ff6b35] to-[#1e90ff] text-white font-bold py-3 px-6 rounded-lg hover:from-[#e55a2a] hover:to-[#1a78d7] transition-all duration-300 transform hover:-translate-y-1 shadow-lg"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 bg-gradient-to-b from-[#f0f9ff] to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">What Our Community Says</h2>
        <div class="w-24 h-1 bg-[#ff6b35] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index} 
            class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100 transform transition-all duration-300 hover:scale-105"
          >
            <div class="text-[#ff6b35] text-4xl mb-4">"</div>
            <p class="text-gray-700 mb-6 italic">"{testimonial.quote}"</p>
            <p class="font-semibold text-gray-800">- {testimonial.author}</p>
          </div>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <div class="inline-block bg-gradient-to-r from-[#ff6b35] to-[#1e90ff] text-white px-8 py-4 rounded-full font-bold shadow-lg">
          <i class="fas fa-seedling mr-3"></i> 
          We're excited to bloom with you!
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .gradient-border {
    position: relative;
    border-radius: 12px;
    padding: 2px;
    background: linear-gradient(45deg, #ff6b35, #1e90ff);
  }
  
  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff6b35, #1e90ff);
    border-radius: 14px;
    z-index: -1;
    animation: gradientShift 3s linear infinite;
  }
  
  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>