---
import Layout from '../layouts/Layout.astro';

const pageTitle = "FloraFusion - Blooming Innovations for Passionate Florists";
const pageDescription = "Discover FloraFusion, where bold floral innovations meet modern design. Empower your floristry with energetic tools and resources tailored for passionate creators.";

const features = [
  {
    title: "Innovative Tools",
    description: "Access cutting-edge design software, AI-powered trend predictors, and sustainable sourcing guides to elevate your craft.",
    icon: "fas fa-lightbulb"
  },
  {
    title: "Energetic Community",
    description: "Join a network of like-minded florists sharing knowledge, inspiration, and breakthrough techniques.",
    icon: "fas fa-users"
  },
  {
    title: "Modern Workflows",
    description: "Streamline your operations with intuitive platforms designed for the contemporary florist's lifestyle.",
    icon: "fas fa-sync-alt"
  }
];

const testimonials = [
  {
    quote: "FloraFusion transformed how I approach each project. The tools are game-changers!",
    author: "Maya Rodriguez",
    role: "Master Florist"
  },
  {
    quote: "Finally a platform that understands our passion and challenges. Truly inspiring!",
    author: "James Peterson",
    role: "Studio Owner"
  },
  {
    quote: "The community support alone is worth it. I've made lifelong connections here.",
    author: "Sophie Chen",
    role: "Boutique Owner"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#ff6b35] via-[#ff8c5a] to-[#ff6b35] py-20 md:py-32">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-64 h-64 bg-white rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
      <div class="absolute top-20 right-10 w-72 h-72 bg-[#1e90ff] rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
      <div class="absolute bottom-10 left-1/2 w-80 h-80 bg-[#ffd700] rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Welcome to <span class="block">FloraFusion</span>
        </h1>
        <p class="text-xl md:text-2xl text-white mb-10 max-w-2xl mx-auto">
          Blooming Innovations for Passionate Florists
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-white text-[#ff6b35] hover:bg-gray-100 font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            Explore Platform
          </button>
          <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-bold py-3 px-8 rounded-full text-lg transition-all duration-300">
            Join Community
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-20 bg-gradient-to-b from-white to-[#fff8f0]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#ff6b35] mb-6">Ignite your floral creativity</h2>
        <p class="text-lg md:text-xl text-gray-700 mb-8 leading-relaxed">
          FloraFusion is the ultimate platform designed for visionary florists who dare to dream big. 
          Our tagline isn't just words; it's a promise of <em class="font-bold text-[#1e90ff]">vibrant energy</em> and 
          <em class="font-bold text-[#ff6b35]"> modern flair</em> in every petal and project.
        </p>
        <div class="inline-block bg-[#ff6b35]/10 rounded-full px-6 py-3">
          <p class="text-[#ff6b35] font-bold">In a world of wilting ideas, we bring bold, energetic solutions</p>
        </div>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="relative">
            <div class="absolute -inset-4 bg-[#1e90ff]/20 rounded-2xl transform rotate-3"></div>
            <div class="relative bg-white p-8 rounded-2xl shadow-xl border border-[#ff6b35]/10">
              <h3 class="text-2xl font-bold text-gray-800 mb-4">Fusing Tradition with Innovation</h3>
              <p class="text-gray-600 mb-6">
                Whether you're crafting bespoke bouquets or revolutionizing your studio, 
                FloraFusion is your bloom of inspiration. Our platform connects you with 
                the latest trends, cutting-edge tools, and an inspiring network of florists 
                dedicated to excellence.
              </p>
              <div class="flex items-center">
                <div class="mr-4 text-[#ff6b35]">
                  <i class="fas fa-flower-bouquet text-3xl"></i>
                </div>
                <p class="text-gray-700 italic">"Where art meets innovation in perfect harmony"</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#ff6b35] transform hover:scale-[1.02] transition-transform duration-300">
            <div class="flex items-start">
              <div class="mr-4 mt-1 text-[#ff6b35]">
                <i class="fas fa-bolt text-2xl"></i>
              </div>
              <div>
                <h4 class="text-xl font-bold text-gray-800 mb-2">Bold Solutions</h4>
                <p class="text-gray-600">Cutting-edge tools designed to supercharge your creative process and workflow efficiency.</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#1e90ff] transform hover:scale-[1.02] transition-transform duration-300">
            <div class="flex items-start">
              <div class="mr-4 mt-1 text-[#1e90ff]">
                <i class="fas fa-leaf text-2xl"></i>
              </div>
              <div>
                <h4 class="text-xl font-bold text-gray-800 mb-2">Sustainable Practices</h4>
                <p class="text-gray-600">Resources and guides helping you create beautiful arrangements with environmental consciousness.</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-[#ffd700] transform hover:scale-[1.02] transition-transform duration-300">
            <div class="flex items-start">
              <div class="mr-4 mt-1 text-[#ffd700]">
                <i class="fas fa-award text-2xl"></i>
              </div>
              <div>
                <h4 class="text-xl font-bold text-gray-800 mb-2">Recognition Programs</h4>
                <p class="text-gray-600">Showcase your masterpieces and connect with industry leaders who value innovation.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gradient-to-b from-[#fff8f0] to-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Why Choose FloraFusion?</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">We go beyond expectations to empower your floral journey</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white rounded-2xl p-8 shadow-xl border border-[#ff6b35]/10 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 rounded-full bg-[#ff6b35]/10 flex items-center justify-center mb-6 text-[#ff6b35]">
              <i class={`${feature.icon} text-2xl`}></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-4">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-gradient-to-br from-[#1e90ff] to-[#006994] text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Florists Say</h2>
        <p class="text-xl text-blue-100 max-w-2xl mx-auto">Real stories from passionate creators making a difference</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
            <div class="text-yellow-300 text-3xl mb-4">
              <i class="fas fa-quote-left"></i>
            </div>
            <p class="text-lg mb-6 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-bold text-white">{testimonial.author}</p>
              <p class="text-blue-200">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#ff6b35] to-[#ff8c5a]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Bloom?</h2>
      <p class="text-xl text-white/90 max-w-2xl mx-auto mb-10">
        Join thousands of passionate florists transforming their craft with our innovative platform
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-[#ff6b35] hover:bg-gray-100 font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          Start Your Journey
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-bold py-4 px-10 rounded-full text-lg transition-all duration-300">
          View Demo
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-blob {
    animation: blob 15s infinite linear;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>