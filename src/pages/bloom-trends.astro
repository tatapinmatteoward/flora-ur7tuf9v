---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Bloom Trends: Igniting Floral Innovation";
const pageDescription = "Discover the latest bloom trends revolutionizing the floristry world. From sustainable practices to bold color palettes, stay ahead with FloraFusion's insights for passionate florists.";

const trends = [
  {
    id: 1,
    title: "Sustainable Blooms: Eco-Chic Revolution",
    description: "Embrace the green wave! Florists are turning to locally sourced, organic flowers to reduce carbon footprints. Think edible florals and zero-waste arrangements that tell a story of sustainability.",
    tips: [
      "Incorporate upcycled vases from recycled glass for that modern edge.",
      "Source flowers directly from local farms to reduce transportation emissions."
    ],
    icon: "leaf"
  },
  {
    id: 2,
    title: "Vibrant Color Clash",
    description: "Bold, unexpected color combinations are taking center stage. Mismatched hues that create drama and excitement while maintaining floral elegance.",
    tips: [
      "Pair neon greens with sunset oranges for a modern pop.",
      "Combine deep purples with bright yellows for striking contrast."
    ],
    icon: "palette"
  },
  {
    id: 3,
    title: "Edible Flower Edition",
    description: "The fusion of culinary and floral arts is creating unique experiences. Edible blooms not only taste amazing but also add a playful twist to bouquets.",
    tips: [
      "Use nasturtiums and pansies as both decoration and garnish.",
      "Create tasting menus with flower-inspired desserts."
    ],
    icon: "utensils"
  },
  {
    id: 4,
    title: "Botanical Macramé",
    description: "Natural fibers combined with fresh blooms creating rustic yet elegant arrangements that blend traditional crafts with modern floristry.",
    tips: [
      "Use jute cords to create hanging planters for bouquets.",
      "Weave macramé elements into wedding centerpiece designs."
    ],
    icon: "hand-holding-heart"
  }
];

const testimonials = [
  {
    quote: "These trends completely transformed my business approach. My clients are amazed by the innovative designs!",
    author: "Maria Rodriguez",
    role: "Owner, Bloom Boutique"
  },
  {
    quote: "The sustainable practices taught here have cut my costs significantly while boosting my brand reputation.",
    author: "James Peterson",
    role: "Head Florist, Garden Dreams"
  },
  {
    quote: "The color clash ideas gave me the confidence to break traditional rules. My latest arrangements are trending!",
    author: "Sophia Chen",
    role: "Creative Director, Petal Perfect"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <div class="relative bg-gradient-to-br from-[#ff6b35] via-[#ff8c5a] to-[#ff6b35] py-20 md:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-32 h-32 rounded-full bg-white animate-pulse"></div>
      <div class="absolute bottom-20 right-20 w-48 h-48 rounded-full bg-white animate-ping"></div>
      <div class="absolute top-1/3 right-1/4 w-24 h-24 rounded-full bg-white animate-bounce"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          <span class="block">Bloom Trends:</span>
          <span class="block mt-2 text-2xl md:text-4xl">Igniting Floral Innovation</span>
        </h1>
        <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto leading-relaxed">
          Discover the latest bloom trends revolutionizing the floristry world. From sustainable practices to bold color palettes, stay ahead with FloraFusion's insights for passionate florists.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-white text-[#ff6b35] font-bold rounded-full shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
            Explore Trends
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-colors duration-300">
            Join Our Community
          </button>
        </div>
      </div>
    </div>
  </div>

  {/* Trend Cards Section */}
  <section class="py-20 bg-gradient-to-b from-white to-[#fff8f0]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-[#ff6b35] mb-4">Trending Innovations</h2>
        <div class="w-24 h-1 bg-[#1e90ff] mx-auto rounded-full"></div>
        <p class="mt-6 text-gray-600 max-w-2xl mx-auto">
          Discover how these cutting-edge trends are transforming the floristry landscape and empowering you to create unforgettable blooms.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {trends.map((trend) => (
          <div 
            key={trend.id} 
            class="group bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-[#ff6b35]/20"
          >
            <div class="p-6">
              <div class="w-16 h-16 rounded-full bg-[#ff6b35]/10 flex items-center justify-center mb-6 group-hover:bg-[#ff6b35]/20 transition-colors duration-300">
                <i class={`fas fa-${trend.icon} text-2xl text-[#ff6b35]`}></i>
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-3">{trend.title}</h3>
              <p class="text-gray-600 mb-4">{trend.description}</p>
              <ul class="space-y-2">
                {trend.tips.map((tip, index) => (
                  <li key={index} class="flex items-start text-sm text-gray-700">
                    <i class="fas fa-chevron-right text-[#1e90ff] mt-1 mr-2"></i>
                    <span>{tip}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="px-6 py-4 bg-gradient-to-r from-[#ff6b35] to-[#1e90ff]">
              <button class="text-white font-medium text-sm flex items-center group-hover:underline">
                Learn More
                <i class="fas fa-arrow-right ml-2 text-xs"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Testimonial Section */}
  <section class="py-20 bg-gradient-to-br from-[#ff8c5a] to-[#ff6b35]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">What florists say</h2>
        <div class="w-24 h-1 bg-white mx-auto rounded-full"></div>
        <p class="mt-6 text-white/90 max-w-2xl mx-auto">
          Hear from industry leaders who have embraced these trends and transformed their businesses.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {testimonials.map((testimonial, index) => (
          <div key={index} class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20">
            <div class="text-yellow-300 mb-4">
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            </div>
            <p class="text-white italic mb-6">"{testimonial.quote}"</p>
            <div>
              <p class="font-bold text-white">{testimonial.author}</p>
              <p class="text-white/80 text-sm">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-r from-[#1e90ff] to-[#0069d9]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Bloom?</h2>
      <p class="text-white/90 max-w-2xl mx-auto mb-10 text-lg">
        Join thousands of florists already implementing these innovative trends to elevate their craft and captivate clients.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-white text-[#1e90ff] font-bold rounded-full shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
          Get Free Resources
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-colors duration-300">
          View Full Guide
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
    100% { transform: translateY(0px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .custom-gradient {
    background: linear-gradient(135deg, #ff6b35, #ff8c5a, #1e90ff);
  }
</style>